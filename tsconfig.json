{
    "compilerOptions": {
        "experimentalDecorators": true,
        "baseUrl": "./",
        "paths": {
            "components": ["./components/*"],
            "pages": ["./pages/*"],
            "assets": ["./assets/*"],
            "helper": ["./helper/*"]
        },
        "outDir": "./dist/",
        "module": "es6",
        "target": "es5",
        "allowJs": true,
        "jsx": "react",
        "moduleResolution": "node",
        "sourceMap": true,
        "plugins": ["typescript-plugin-css-modules"]
    },
    "exclude": ["./node_modules/"]
}
